<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.linkTitle {
			font-family: tahoma, arial, sans-serif;
			font-size: 12px;
			color: #393939;
			text-decoration: none;
			line-height: 23px;
			font-weight: bold;
		}
		
		.linkTitle:hover {
			font-family: tahoma, arial, sans-serif;
			font-size: 12px;
			color: #bfb48f;
			line-height: 23px;
			font-weight: bold;
		}
		
		.letterTextGrey {
			font-family: 'Helvetica', Arial, 'Tahoma', sans-serif;
			font-size: 11px;
			color: #9f9f9f;
			line-height: 23px;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel>

		<table style="width:100%" cellpadding="0" cellspacing="0">
			<tr>
				<td>
					<g:Anchor ui:field="articleTitle" styleName="{style.linkTitle}" />
					<br />
					<g:HTMLPanel ui:field="createPanel">
						Dodano:
						<g:Label ui:field="created" styleName="{style.linkTitle}" />
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="updatePanel">
						Ostatnia aktualizacja:
						<g:Label ui:field="lastUpdate" styleName="{style.linkTitle}" />
					</g:HTMLPanel>
				</td>
			</tr>
			<tr>
				<td>
					<g:HTML ui:field="articleBody" styleName="{style.letterTextGrey}" />
				</td>
			</tr>
		</table>

	</g:HTMLPanel>
</ui:UiBinder> 